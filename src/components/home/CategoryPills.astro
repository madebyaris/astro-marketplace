---
import { mockCategories } from '../../lib/mock-categories';
---

<section class="mt-6">
  <div class="flex snap-x items-center gap-2 overflow-x-auto pb-1">
    {mockCategories.map((c) => (
      <a href={`/store?cat=${c.slug}`} class="snap-start inline-flex items-center gap-2 whitespace-nowrap rounded-full border border-emerald-200 bg-emerald-50 px-3 py-1.5 text-sm text-emerald-700 hover:bg-emerald-100">
        <span>{c.emoji}</span>
        <span>{c.name}</span>
      </a>
    ))}
  </div>
</section>
